---
import getResponseContentById from '@/services/getResponseContentById';
import '@/styles/global.css'
const { imageSrc, username, content, quote } = Astro.props;
console.log(imageSrc, username, content, quote)
let quoteContent = ''
if(quote){
    console.log(quote)
    const quoteFetching = await getResponseContentById({quote})
    quoteContent = quoteFetching.content
}
---

<div class="response-container">
    <div class="user-profile">
        <img class="image" src={imageSrc} alt={username} />
        <p class="user-info">@{username}</p>
    </div>
{quoteContent && <p class="quote">"{quoteContent}"</p>}
<p>{content}</p>

</div>

<style>
        .image {
            border-radius: 100%;
            border: 4px solid var(--accent);
            grid-area: image;
            height: 64px;
            aspect-ratio: 1 / 1;
        } 
        .quote{
            background-color: var(--accent);
            width: fit-content;
        }
        .response-container{
            padding: 12px;
            display: block;
            width: 96%;
            border-bottom: 1px solid var(--gray);
            border-right: 1px solid var(--gray);
            text-align: left;
        }
        .user-profile{
            display: flex;
            align-items: center;
            margin-bottom: 4px;
            justify-content: flex-start;
            color: var(--primary);
        }
        .user-info{
            margin-left: 12px;
            text-align: left;
        }
</style>