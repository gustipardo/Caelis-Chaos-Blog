---
import getResponseContentById from '@/services/getResponseContentById';
import '@/styles/global.css'
import { ResponseReply } from './ResponseReply';
const { imageSrc, username, content, quote, response_id } = Astro.props;
console.log(imageSrc, username, content, quote)
let quoteContent = ''
if(quote){
    console.log(quote)
    const quoteFetching = await getResponseContentById({quote})
    quoteContent = quoteFetching.content
}
---

<div class="response-container">
    <div class="user-profile">
        <img class="image" src={imageSrc} alt={username} />
        <p class="user-info">@{username}</p>
        <p>a{response_id}</p>
        <ResponseReply response_id={response_id} content={content} username={username} client:load/>
    </div>
{quoteContent && <p class="quote">@{username} wrote: {quoteContent}</p>}
<p>{content}</p>

</div>

<style>
        .image {
            border-radius: 100%;
            border: 4px solid var(--accent);
            grid-area: image;
            height: 64px;
            aspect-ratio: 1 / 1;
        } 
        .quote{
            background-color: var(--accent);
            width: fit-content;
            background-color: var(--accent); /* Color de fondo para resaltar la cita */
            border-left: 4px solid var(--gray); /* Línea vertical a la izquierda */
            padding: 10px; /* Espaciado interno */
            transform: skew(-10deg); /* Inclinación hacia la izquierda */
            width: 90vw;
  max-height: 200px; /* Ajusta 1.2em según el tamaño de la fuente */
  white-space: nowrap; /* Evita que el texto se divida en múltiples líneas */
  overflow: hidden; /* Oculta el texto que se desborda */
  text-overflow: ellipsis; /* Añade "..." al final del texto que se desborda */
        }
        .response-container{
            padding: 12px;
            display: block;
            width: 96%;
            border-bottom: 1px solid var(--gray);
            border-right: 1px solid var(--gray);
            text-align: left;
        }
        .user-profile{
            display: flex;
            align-items: center;
            margin-bottom: 4px;
            justify-content: flex-start;
            color: var(--primary);
        }
        .user-info{
            margin-left: 12px;
            text-align: left;
        }
</style>