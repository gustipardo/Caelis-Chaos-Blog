<style>
.footer{
    width: 100%;
    height: 160px;
    background-color: var(--secondary);
    display: flex;
    justify-content: center;
    color: var(--background) !important;
    margin-top: 20px;
}
#container{
    font-size: 16px;
    width: 360px;
    padding-inline: 26px;
    padding-top: 6px;
    background-color: var(--secondary);
    height: 100%;
    display: grid;
    grid-template-areas:
        "title title"
        "left right"
        "copy copy";
        grid-template-columns: 50% 50%;
        grid-template-rows: auto auto;
    }

.urls{
    font-size: 14px;
    height: 60px;
}

.moreInfo{
    font-size: 12px;
    right: 100px;
    text-align: end;
    height: 60px;
}

.copy{
    width: fit-content;
    text-align: center;
    font-size: 14px;
    height: 32px;
}
h3{
    color: var(--background) !important;
}
</style>