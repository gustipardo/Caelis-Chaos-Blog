---
import Swords from "@/icons/swords.astro"
import MenuSidebar from "@/components/MenuSidebar"
import '@/styles/global.css'
import { getSession } from 'auth-astro/server';
import getImageUrl from '@/services/getImageUrl';
import addUser from '@/services/addUser';

const session = await getSession(Astro.request)
console.log(session)

const user = await getImageUrl({ id: session?.user?.id })
if (Array.isArray(user) && user.length === 0) {
    console.log("no user")
  const result = await addUser({ id: session?.user?.id, username: session?.user?.name, image_url: session?.user?.image, email: session?.user?.email });
}
