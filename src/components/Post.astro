---

const { title, url, authors, date, description, frontImage } = Astro.props;
---

<a id="post" href={url}>
  <imagePost id="imagePost" class="[grid-area:imagePost]">
    <img class="imagePost-image" src={`../../${frontImage}`} alt={title} />
  </imagePost>
  <headPost id="headPost" class="[grid-area:headPost]">
    <h1 class="text-left">{title}</h1>
    <p class="text-left">Posted by {authors} on {date}</p>
  </headPost>
  <descriptionPost id="descriptionPost" class="[grid-area:descriptionPost]">
    <p class="text-left truncated-text">{description}</p>
  </descriptionPost>
</a>

<style>
#post {
    display: grid;
    grid-template-areas:
      "imagePost headPost"
      "imagePost descriptionPost";
    grid-template-columns: auto auto;
    grid-template-rows: auto 1fr;
    border-radius: 12px;
    padding: 0;
    width: 100%;
    border: 5px inset var(--color-accent);
    margin-bottom: 20px;
    height: 220px;
    background-color: var(--color-primary);
    transition: transform 0.3s ease-in-out; /* Agregada transici√≥n en el hover */
  }

  #descriptionPost {
    padding: 8px;
    overflow: hidden;
  }

  #post:hover {
    transform: scale(1.04);
  }

  #headPost {
    padding: 8px;
    border-bottom: 1px solid black;
  }

  #imagePost {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .imagePost-image {
    
    border-radius: 6px;
    max-height: 220px;
    width: 220px;
  }

  h1 {
    font-size: 22px;
    margin: 0;
  }

  .text-left {
    text-align: left;
  }

  @media only screen and (max-width: 440px) {
    #headPost {
      overflow: hidden;
    }
    #post {
      grid-template-areas:
        "imagePost headPost"
        "descriptionPost descriptionPost";
      grid-template-columns: 30% 70%;
      grid-template-rows: 64% 36%;
      height: 220px;
    }
    #imagePost {
      border-bottom: 1px solid black;
    }
  }
</style>
