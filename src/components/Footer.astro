---
import '@/styles/global.css'

---
<footer class="footer">
    <div id="container" class="container">
        <h3 style="font-family: source_serif_pro_bold; font-size: 18px; height: 32px;" class="[grid-area:title]">More from Caelis Chaos:</h3>
        <ul class="urls [grid-area:left]">
            <li><a href="/updates">Blog</a></li>
            <li><a href="/forum">Forum</a></li>
            <li><a href="/trailer">Oficial Trailer</a></li>
        </ul>
        <ul class="moreInfo [grid-area:right]">
            <li><a href="/privacypolicy">Privacy Policy</a></li>
            <li><a href="/termsofuse">Terms of Use</a></li>
            <li><a href="/constact">Contact</a></li>
        </ul>
        <p class="copy [grid-area:copy]">Copyright Â© 2022-2023 Software - all rights reserved.</p>
    </div>
</footer>
<style>
.footer{
      position: absolute;
  bottom: 0;
    width: 100%;
    height: 160px;
    background-color: var(--secondary);
    display: flex;
    justify-content: center;
    color: var(--background) !important;
    margin-top: 20px;

}
#container{
    font-size: 16px;
    width: 360px;
    padding-inline: 26px;
    padding-top: 6px;
    background-color: var(--secondary);
    height: 100%;
    display: grid;
    grid-template-areas:
        "title title"
        "left right"
        "copy copy";
        grid-template-columns: 50% 50%;
        grid-template-rows: auto auto;
    }

.urls{
    font-size: 14px;
    height: 60px;
}

.moreInfo{
    font-size: 12px;
    right: 100px;
    text-align: end;
    height: 60px;
}

.copy{
    width: fit-content;
    text-align: center;
    font-size: 14px;
    height: 32px;
}
h3{
    color: var(--background) !important;
}
</style>